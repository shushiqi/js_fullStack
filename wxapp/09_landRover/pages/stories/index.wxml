<!--pages/stories/index.wxml-->
<view class="cards">
  <view class="card" wx:for="{{entities}}" wx:key="id">
    <video src="{{item.video}}" hidden="{{currentVid !== item.id}}" id="{{item.id}}" duration="{{item.duration_raw}}">
    </video>
    <image bindtap="play" hidden="{{currentVid == item.id}}" data-vid="{{item.id}}" src="{{item.image}}">
      <view class="label">
      {{item.duration}}
      </view>
    </image>
    <navigator url="/pages/show/index">
      <view class="content">
        <view class="header">
          {{item.header}}
        </view>
        <view class="description">
          {{item.description}}
        </view>
        <view class="meta">
          {{item.meta.price}}
        </view>
      </view>
    </navigator>
  </view>
</view>